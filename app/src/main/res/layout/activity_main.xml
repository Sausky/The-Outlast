<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/background"/>


    <ImageView
        android:id="@+id/door"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/door"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/main_curtain">

        <ImageView
            android:id="@+id/secret_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/secret_pic"/>

        <ImageView
            android:id="@+id/lettering"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/lettering"/>

        <ImageView
            android:id="@+id/desk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/desk"/>
        <ImageView
            android:id="@+id/mushroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mushroom"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/secret_package"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/secret_package"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/pillow"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/pillow"/>
        <ImageView
            android:id="@+id/bed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bed"
            />
        </LinearLayout>
    <ImageView
        android:id="@+id/socket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/socket"/>
    <ImageView
        android:id="@+id/mirror"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/mirror"/>
</LinearLayout>
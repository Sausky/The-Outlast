<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/main_curtain">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/deposit"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/deposit"/>
        <ImageView
            android:id="@+id/door"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/door"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linearLayout">

            <ImageView
                android:id="@+id/secret_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/secret_pic"/>

            <ImageView
                android:id="@+id/lettering"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/lettering"/>

            <ImageView
                android:id="@+id/desk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/desk"/>
            <ImageView
                android:id="@+id/mushroom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mushroom"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/secret_package"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/secret_package"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/bed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bed_unmoved"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/socket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/socket"/>
        <ImageView
            android:id="@+id/mirror"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/mirror"/>
    </LinearLayout>



    <com.org.outlast.ui.view.GirlSurfaceView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_below="@+id/mirror">
    </com.org.outlast.ui.view.GirlSurfaceView>

</FrameLayout>
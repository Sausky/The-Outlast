<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/main_curtain">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/deposit"
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:src="@drawable/deposit"/>
        <ImageView
            android:id="@+id/door"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/door" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linearLayout">

            <ImageView
                android:id="@+id/secret_pic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/secret_pic"/>

            <ImageView
                android:id="@+id/lettering"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/lettering"/>

            <ImageView
                android:id="@+id/desk"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/desk"/>
            <ImageView
                android:id="@+id/mushroom"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/mushroom"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/secret_package"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/secret_package"
            android:tag="secret_package"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/bed"
                android:layout_marginTop="30dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/bed_unmoved"
                android:tag="@string/bed_tool_name"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/socket"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/socket"
            android:scaleType="centerCrop"/>
        <ImageView
            android:id="@+id/mirror"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/mirror"
            android:tag="@string/mirror_tool_name"/>
    </LinearLayout>



    <com.org.outlast.ui.view.animationMove.CanvasRefresher
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:id="@+id/girl_view">
    </com.org.outlast.ui.view.animationMove.CanvasRefresher>

</FrameLayout>
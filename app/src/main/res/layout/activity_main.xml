<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/main_curtain">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/background_empty">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <ImageView
            android:id="@+id/door"
            android:paddingTop="100dp"
            android:layout_width="150dp"
            android:layout_height="750dp"
            android:scaleType="centerCrop"
            android:src="@drawable/door" />
            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linearLayout">

            <ImageView
                android:id="@+id/secret_pic"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/secret_pic"/>



            <ImageView
                android:id="@+id/desk"
                android:layout_width="180dp"
                android:layout_height="180dp"/>

            <ImageView
                android:id="@+id/screwdriver"
                android:layout_gravity="right"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/screwdriver"/>

            <ImageView
                android:id="@+id/mushroom"
                android:layout_gravity="center"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
        <ImageView
            android:id="@+id/socket"
            android:paddingTop="90dp"
            android:layout_width="20dp"
            android:layout_height="110dp"
            android:scaleType="centerCrop"/>
            <ImageView
                android:id="@+id/socket_drier"
                android:layout_width="50dp"
                android:paddingTop="90dp"
                android:layout_height="290dp"
                android:src="@drawable/socket_drier"
                android:visibility="invisible"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/secret_package"
            android:paddingTop="100dp"
            android:layout_height="200dp"
            android:layout_width="80dp"
            android:src="@drawable/secret_package_close"
            />



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/mirror"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:src="@drawable/mirror"
                />
            <ImageView
                android:id="@+id/bed"
                android:scaleType="fitStart"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@drawable/bed_unmoved"

                />
            <ImageView
                android:id="@+id/deposit"
                android:paddingLeft="50dp"
                android:layout_height="90dp"
                android:layout_width="150dp"
                android:scaleType="fitXY"
                android:src="@drawable/deposit_column"/>
        </LinearLayout>
    </LinearLayout>




<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:gravity="center_horizontal"
    android:paddingTop="80dp"
    android:id="@+id/back"
    >
    <NumberPicker
        android:id="@+id/number_1"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>
    <NumberPicker
        android:id="@+id/number_2"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/number_1"
        android:layout_gravity="center"/>
    <NumberPicker
        android:id="@+id/number_3"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/number_2"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/confirm"
        android:layout_below="@id/number_3"
        android:layout_height="80dp"
        android:layout_width="100dp"
        android:textSize="22sp"
        android:layout_gravity="center"
        android:text="确认"/>
    <Button
        android:id="@+id/home"
        android:layout_height="80dp"
        android:layout_width="100dp"
        android:layout_gravity="center"
        android:textSize="22sp"
        android:text="返回"
        android:layout_below="@+id/number_2"
        android:layout_alignRight="@+id/number_3"
        android:layout_alignEnd="@+id/number_3" />

</RelativeLayout>
